// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model JournalEntry {
  id           String   @id @default(cuid())
  userId       String   // Clerk user ID - associates entry with authenticated user
  intention    String
  topic        String?
  deckSeed     String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  messagesJson Json     // Stores the entire ChatSession as JSONB

  @@index([userId, createdAt(sort: Desc)])
  @@index([createdAt(sort: Desc)])
  @@map("journal_entries")
}

model User {
  id        String   @id // Clerk user ID
  tipsShown Json?    // Tracks which tips have been shown: { "followupChatTip": boolean }
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}
